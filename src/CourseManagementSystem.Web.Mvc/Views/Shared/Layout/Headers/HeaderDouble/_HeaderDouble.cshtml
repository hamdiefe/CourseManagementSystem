@using CourseManagementSystem.Web.Views.Shared.Components.RightNavbarUserArea
<div id="headerDouble" class="d-none">
    <header id="header" class="navbar navbar-expand-lg navbar-bordered flex-lg-column px-0">
        <div class="navbar-dark w-100">
            <div class="container-fluid">
                <div class="navbar-nav-wrap">
                    <div class="navbar-brand-wrapper">
                        <!-- Logo -->
                        @await Html.PartialAsync("~/Views/Shared/Layout/Headers/HeaderDouble/_Logo.cshtml")
                        <!-- End Logo -->
                    </div>

                    <div class="navbar-nav-wrap-content-left">
                        <!-- Search Form -->
                        @*@await Html.PartialAsync("~/Views/Shared/Layout/Headers/HeaderDouble/_Search.cshtml")*@
                        <!-- End Search Form -->
                    </div>

                    <!-- Secondary Content -->
                    <div class="navbar-nav-wrap-content-right">
                        <!-- Navbar -->
                        <ul class="navbar-nav align-items-center flex-row">
                            <li class="nav-item">
                                @await Component.InvokeAsync(typeof(RightNavbarUserAreaViewComponent))
                            </li>
                            <li class="nav-item">
                                <!-- Toggle -->
                                <button type="button" class="navbar-toggler btn btn-ghost-light rounded-circle" aria-label="Toggle navigation" aria-expanded="false" aria-controls="navbarNavMenu" data-toggle="collapse" data-target="#navbarNavMenu">
                                    <i class="tio-menu-hamburger"></i>
                                </button>
                                <!-- End Toggle -->
                            </li>
                        </ul>
                        <!-- End Navbar -->
                    </div>
                    <!-- End Secondary Content -->
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <nav class="js-mega-menu flex-grow-1">
                <!-- Navbar -->
                <div class="navbar-nav-wrap-navbar collapse navbar-collapse" id="navbarNavMenu">
                    <div class="navbar-body">
                        @await Html.PartialAsync("~/Views/Shared/Layout/Headers/HeaderDouble/_NavMenu.cshtml")
                    </div>
                </div>
                <!-- End Navbar -->
            </nav>
        </div>
    </header>
</div>